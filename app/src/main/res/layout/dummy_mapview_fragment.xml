<?xml version="1.0" encoding="utf-8"?>
<!-- this adds no intrinsic value to the app, except to
     serve as a way for the developers to visualize what this
     activity will look like in the actual application. -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/dummy_map_fragment"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:contentDescription="dummy map image"
        tools:ignore="HardcodedText" />

</RelativeLayout>